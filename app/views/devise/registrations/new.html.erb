<div class="container">
    <div class="card">
        <div class="card-header">Mon compte <strong> > </strong> Nouvelle utilisateur </div>
    </div>
</div>
<div class="pad-in">
    <div class="row justify-content-center" style="margin-top: 5%;margin-bottom: 5%;">
        <div class="col-md-8">
            <div class="register-form-container">
                <div class="card-body new_user">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="form-group row">
                            <label for="name" class="col-md-4 col-form-label text-md-right">Nom</label>
                            <div class="col-md-6">
                                <%= f.text_field :name, class:"fields_label" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="firstname" class="col-md-4 col-form-label text-md-right">Prenom</label>
                            <div class="col-md-6">
                                <%= f.text_field :last_name, class:"fields_label" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="email" class="col-md-4 col-form-label text-md-right">Email</label>

                            <div class="col-md-6">
                                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"fields_label" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">Mot de passe</label>
                            <div class="col-md-6">
                                <%= f.password_field :password, autocomplete: "new-password", class:"fields_label" %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Confirmation</label>
                            <div class="col-md-6">
                                <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"fields_label" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Pays</label>
                            <div class="col-md-6">
                              <% @pays = [ 'select your region','Cell', 'Work', 'Office', 'Home', 'Other' ] %>
                              <%= f.select :pays, options_for_select(@pays),{}, { class: "fields_label" } %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password-confirm" class="col-md-4 col-form-label text-md-right">Region</label>
                            <div class="col-md-6">
                              <% @pays = [ 'select your region','Cell', 'Work', 'Office', 'Home', 'Other' ] %>
                              <%= f.select :region, options_for_select(@pays),{}, { class: "fields_label" } %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Date de naissance</label>
                            <div class="col-md-6">
                                <%= f.text_field :birthday, class:"fields_label" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-4 col-form-label text-md-right">Phone</label>
                            <div class="col-md-6">
                                <%= f.text_field :phone, class:"fields_label" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password-confirm" class="col-md-4 col-form-label text-md-right"></label>
                            <div class="col-md-6">
                              <span class="input-nile">
                                  <%= f.radio_button :sexe,"Homme",class: 'input__field input__field-nile radio'%>
                                    <label class="radio-label">Homme</label>
                              </span>
                              <span class="input-nile">
                                  <%= f.radio_button :sexe,"Femme",class: 'input__field input__field-nile radio'%>
                                  <label class="radio-label">Femme </label>
                              </span>
                            </div>
                        </div>

                        <div class="form-group row mb-0">
                            <div class="col-md-6 offset-md-4">
                                <div class="actions">
                                  <%= f.submit "Sign up", class:"btn submit-login" %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

