<div class="container">
    <div class="login-content">
        <div class="col-25">
            <div class="container form-container">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class = "login-form">
                        <h3 class="login-form">Se connecter</h3>
                        <div class="bold bottom color-black">
                            Pas encore de compte sur valintanana?
                                <a class="dropdown-item nav-link" href="/users/sign_up" >
                                    <strong class="color-green">Inscription</strong>
                                </a>
                        </div>
                        <br>
                        <label for="email">E mail</label>
                        <div class="field">
                             <%= f.text_field :email, autofocus: true,autocompete:'email',placeholder:"email",class:"fields_label"%>                    
                        </div>
                        <label for="password">Mot de pass</label>
                        <div class="field">
                             <%= f.password_field :password, autocomplete: "current-password",placeholder:"Mot de passe",class:"fields_label"  %>                      
                        </div>
                    </div>
                      <% if devise_mapping.rememberable? -%>
                        <div class="field">
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                        </div>
                      <% end -%>
                    <div >
                        <div>
                            <div class="actions">
                                <%= f.submit "Log in", class:"btn submit-login" %>
                            </div>
                        </div>
                    </div>
                <% end %>
           </div>
        </div>
    </div>
</div>